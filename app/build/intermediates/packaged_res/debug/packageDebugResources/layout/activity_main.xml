<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/captureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Gear Image" />

    <Button
        android:id="@+id/analyzeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analyze Gear Teeth" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detected teeth will appear here"
        android:padding="8dp" />

    <EditText
        android:id="@+id/driverGearTeeth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Driver gear teeth"
        android:inputType="number" />

    <EditText
        android:id="@+id/drivenGearTeeth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Driven gear teeth"
        android:inputType="number" />

    <Button
        android:id="@+id/calculateRatioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Gear Ratio" />

    <TextView
        android:id="@+id/ratioResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gear ratio result will appear here"
        android:padding="8dp" />
</LinearLayout>